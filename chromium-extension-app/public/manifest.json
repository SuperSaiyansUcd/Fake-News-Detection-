{
"name": "Fake News Detection",
"version": "1.0.0",
"manifest_version": 3,
"description": "Send the selected text to Fake News Detection System",
"permissions": [
      "contextMenus",
      "tabs",
      "activeTab"
],
"background": {
    "service_worker": "background.js",
    "type": "module"
},
"action": {
    "default_icon": {
      "16": "Icon2-192.png",
      "128": "Icon2-512.png"
    },
    "default_popup": "popup.html"
   
  },
  "icons": {
      "16": "Icon2-192.png",
      "128": "Icon2-512.png"
  }
}